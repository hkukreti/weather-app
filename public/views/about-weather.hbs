<div class="container">
    <div class="mt-5 mb-5">
        <h2 class="text-center">ABOUT WEATHER</h2>
    </div>
    <div class="col text-center">
        <fieldset>
            <form action="/form" method="post" class="mt-5 mb-5">
                <input name="city" type="text" id="city" class="form-control mt-5 mb-5" placeholder="Enter a City" required>
                <input type="submit" class="btn btn-danger mt-5 mb-5" value="Get Weather">
            </form>
        </fieldset>
        <h4 class="mt-3 bold">{{weather}}</h4>
    </div>
</div>